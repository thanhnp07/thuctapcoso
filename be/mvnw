#!/bin/sh
# Maven Wrapper startup script for Unix/Linux/Mac

set -e

MAVEN_PROJECTBASEDIR="${MAVEN_BASEDIR:-$PWD}"
WRAPPER_VERSION=3.2.0
MAVEN_WRAPPER_JAR="$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar"
MAVEN_WRAPPER_URL="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/$WRAPPER_VERSION/maven-wrapper-$WRAPPER_VERSION.jar"

if [ ! -f "$MAVEN_WRAPPER_JAR" ]; then
  if command -v wget > /dev/null; then
    echo "Downloading maven-wrapper.jar using wget"
    wget -O "$MAVEN_WRAPPER_JAR" "$MAVEN_WRAPPER_URL"
  elif command -v curl > /dev/null; then
    echo "Downloading maven-wrapper.jar using curl"
    curl -o "$MAVEN_WRAPPER_JAR" "$MAVEN_WRAPPER_URL"
  else
    echo "Error: wget or curl is required to download maven-wrapper.jar" >&2
    exit 1
  fi
fi

exec java -jar "$MAVEN_WRAPPER_JAR" "$@"
